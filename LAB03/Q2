#include <iostream>
#include <string>
using namespace std;

class Node {
public:
    string item;
    int price;
    Node* next;

    Node(string i, int p) {
        item = i;
        price = p;
        next = nullptr;
    }
};

class ShoppingCart {
private:
    Node* head;

public:
    ShoppingCart() {
        head = nullptr;

        // Initialise default items in the cart
        addItemAtTail("Laptop", 1000);
        addItemAtTail("Phone", 700);
        addItemAtTail("Tablet", 400);
        addItemAtTail("Headphones", 150);
    }

    void addItemAtTail(string item, int price) {
        Node* newNode = new Node(item, price);
        if (head == nullptr) {
            head = newNode;
            return;
        }
        Node* temp = head;
        while (temp->next != nullptr) {
            temp = temp->next;
        }
        temp->next = newNode;
    }


    void deletefromFront() {
        if (head == nullptr) {
            cout << "Your cart is empty.\n";
            return;
        }
        Node* temp = head;
        head =head->next;
        delete temp;
    }

 
    void searchByName(string name) {
        Node* temp = head;
        while (temp != nullptr) {
            if (temp->item == name) {
                cout <<name<< " found"<< temp->price << endl;
                return;
            }
            temp = temp->next;
        }
        cout <<name<< " not found.\n";
    }


    void searchByPosition(int p) {
        Node* temp = head;
        int count = 1;
        while (temp != nullptr) {
            if (count == p) {
                cout << "Item at position " <<p<< " is " << temp->item <<" "<< temp->price <<"Rs"<< endl;
                return;
            }
            temp = temp->next;
            count++;
        }
        cout << "Invalid position.\n";
    }

    
    void displayCart() {
        Node* temp = head;
        cout << "Cart:\n";
        while (temp != nullptr) {
            cout << temp->item<< temp->price <<"Rs"<< endl;
            temp = temp->next;
        }
    }
};

int main() {
    ShoppingCart cart;
    cart.displayCart();
    cout << endl;

    cart.deletefromFront();
    cart.displayCart();
    cout << endl;

    cart.searchByName("Tablet");
    cart.searchByPosition(3);

    return 0;
}
